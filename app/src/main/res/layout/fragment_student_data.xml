<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.courses.class_data.class_students.student_data.StudentDataFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_student_data"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_student_icon"
            android:layout_gravity="center_horizontal"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personal Details:"
                android:textSize="25sp"
                android:fontFamily="@font/hvd"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:padding="3dp"/>

        </TableRow>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student Uid:"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:fontFamily="@font/hvd"/>

                <TextView
                    android:id="@+id/txt_student_data_Uid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student Uid"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/hvd"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student Name:"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:fontFamily="@font/hvd"/>

                <TextView
                    android:id="@+id/txt_student_data_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student Name"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/hvd"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student Email:"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:fontFamily="@font/hvd"/>

                <TextView
                    android:id="@+id/txt_student_data_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student Email"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/hvd"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student Class:"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:fontFamily="@font/hvd"/>

                <TextView
                    android:id="@+id/txt_student_data_class"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student Class"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/hvd"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student Roll No:"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:fontFamily="@font/hvd"/>

                <TextView
                    android:id="@+id/txt_student_data_roll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student Roll No"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/hvd"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student Address:"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:fontFamily="@font/hvd"/>

                <TextView
                    android:id="@+id/txt_student_data_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student Address"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/hvd"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parent Name:"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:fontFamily="@font/hvd"/>

                <TextView
                    android:id="@+id/txt_student_data_parent_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parent Name"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/hvd"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parent Phone:"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:fontFamily="@font/hvd"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_student_data_parent_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Parent Phone"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/hvd"/>

                    <ImageButton
                        android:id="@+id/btn_call_parent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_baseline_call_24"
                        android:layout_gravity="end"
                        android:layout_marginStart="5dp"
                        android:background="@color/white"
                        />

                </LinearLayout>



            </TableRow>

        </TableLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Academic Details:"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:fontFamily="@font/hvd"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="3dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:layout_height="120dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btn_view_students_attendance"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_attendance"
                    android:backgroundTint="@color/light_grey"
                    android:contentDescription="@string/menu_view_attendance"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="ATTENDANCE"
                    android:textAlignment="center"
                    android:fontFamily="@font/hvd"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:layout_height="120dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btn_view_students_results"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_results"
                    android:backgroundTint="@color/light_grey"
                    android:contentDescription="@string/menu_view_results"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Results"
                    android:textAlignment="center"
                    android:fontFamily="@font/hvd"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</ScrollView>