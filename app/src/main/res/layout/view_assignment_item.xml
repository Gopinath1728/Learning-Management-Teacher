<?xml version="1.0" encoding="utf-8"?>
<com.example.sampleschoolteacher.Common.SwipeRevealLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:dragFromEdge="right">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|end"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/img_assignment_delete"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/white"
                app:srcCompat="@drawable/ic_baseline_delete_24"
                android:text="Delete"/>


        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="5dp"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/view_foreground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|center_vertical"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/hvd"
                    android:gravity="end"
                    android:text="Date"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txt_subject_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_date"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/hvd"
                    android:gravity="center_horizontal"
                    android:text="Subject Name"
                    android:textColor="@android:color/black"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/txt_teacher_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_subject_name"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/hvd"
                    android:gravity="center_horizontal"
                    android:text="Teacher Name"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txt_topic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_teacher_name"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/hvd"
                    android:gravity="center_horizontal"
                    android:text="Topic"
                    android:textColor="@android:color/black"
                    android:textSize="23sp" />

                <TextView
                    android:id="@+id/txt_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_topic"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/hvd"
                    android:text="Body"
                    android:textColor="@android:color/black"
                    android:textSize="21sp" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </FrameLayout>

</com.example.sampleschoolteacher.Common.SwipeRevealLayout>