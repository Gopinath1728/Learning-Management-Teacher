<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.courses.class_data.quiz.QuizFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_no_quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Quiz Found"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:textSize="25sp"
        android:fontFamily="@font/hvd"
        android:textColor="@color/black"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_white_add_24"
        app:tint="@color/white"
        android:contentDescription="@string/menu_add_quiz" />

</RelativeLayout>